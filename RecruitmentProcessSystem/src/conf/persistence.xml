<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="RecruitmentProcessSystemPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>hrgroup.db.entities.Interview</class>
    <class>hrgroup.db.entities.Vacancy</class>
    <class>hrgroup.db.entities.Department</class>
    <class>hrgroup.db.entities.Interviewer</class>
    <class>hrgroup.db.entities.RegisterInterview</class>
    <class>hrgroup.db.entities.Administrator</class>
    <class>hrgroup.db.entities.Applicant</class>
    <class>hrgroup.db.entities.ResultInterview</class>
    <class>hrgroup.db.entities.InterviewResult</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=RecruitmentProcessSystem"/>
      <property name="javax.persistence.jdbc.password" value="123456"/>
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
    </properties>
  </persistence-unit>
</persistence>
